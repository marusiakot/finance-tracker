


<% if @article.errors.any? %>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li>
      <%= msg %>
    </li>
    <% end %>
  </ul>
<% end %>


<div class="row">
  <div class="col-xs-12"
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |g| %>
      <div class="form-group">
          <div class="control-label col-sm-12">
            <%= g.label :title %>
          </div>    
       <div class="col-sm-8">
            <%= g.text_field :title, class: "form-control", placeholder: "Событие", autofocus: true %>
          </div>  
        </div>
    <div class="form-group">
      <div class="control-label col-sm-12">    
         <%= g.label :description %>
      </div>   
      <div class="col-sm-8">
          <%= g.text_area :description, class: "form-control", rows: 10, placeholder: "Прогноз" %>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-sm-offset-2 col-sm-8">
            <%= g.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
        <% end %>
          </div>
        </div>
    </div>
    <div class="form-group">
      <div class="control-sm-offset-4 col-sm-10">  
          <%= g.submit class: "btn btn-primary btn-large" %>      
      </div>
    </div>  
<% end %>

  <div class="col-xs-4 col-xs-offset-4">
    [<%= link_to "Вернуться к прогнозам", articles_path %>]
  </div>
</div>
</div>
    

