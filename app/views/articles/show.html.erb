<h2 align="center">Матч: <%= @article.title %></h2>

<div class="well col-xs-8 col-xs-offset-2">
    <h4 class="center description"><strong>Описание:</strong></h4>
    <hr>
        <%= simple_format(@article.description) %>
        <% if @article.categories.any? %>
            <p>Категории: <%= render @article.categories %></p>
        <% end %>
    <div class="article-actions">
        <% if logged_in? && (current_user == article.user || current_user.admin?) %>
        <%= link_to "Редактировать", edit_article_path(@article), class: "btn btn-xs btn-primary" %>
        <%= link_to "Удалить", article_path(@article), method: :delete,
        data: { confirm: "Are you sure you want to delete the article?"},
        class: "btn btn-xs btn-danger" %>
        <% end %>
        <%= link_to "Вернуться к прогнозам", articles_path, class: "btn btn-xs btn-success" %>
    </div>
</div>
